@model DessertTaCeinture.WEB.Models.Category.CategoryModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-offset-3 col-md-6 text-center" style="margin-top: 200px;">
    <h3>Êtes-vous sûr de vouloir supprimer "@Model.Name" ?</h3>
    <div>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value="Supprimer" class="btn btn-default" />
                @Html.ActionLink("Annuler", "Index", null, new { @class = "btn btn-default" })
            </div>
        }
    </div>
</div>
