@model IEnumerable<DessertTaCeinture.WEB.Models.News.NewsModel>

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-md-12 animate-box">
            @foreach (var item in Model)
            {
                @Html.Partial("_NewsCard", item)
            }
        </div>
    </div>
}
else
{
    <div class="row" style="margin-top:50px;">
        <div class="col-md-12 animate-box">
            <h3 class="cursive-font text-center">Aucun résultat à afficher !</h3>
        </div>
    </div>
}
