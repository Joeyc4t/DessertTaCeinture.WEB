@model IEnumerable<DessertTaCeinture.WEB.Models.User.UserModel>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Utilisateurs :</h3>
<p>
    <br />
</p>
<table class="table">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.InscriptionDate)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th class="text-center">
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.InscriptionDate)
            </td>
            <td class="text-center">
                @if (item.IsActive)
                { <img src="~/Content/images/keys/isactive.png" /> }
                else
                { <img src="~/Content/images/keys/isnotactive.png" /> }
            </td>
            <td class="text-center">
                @if(item.IsActive)
                { <a href="@Url.Action("Delete","User", new { id = item.Id })"><img src="~/Content/images/keys/garbage.png" /></a> }
                else
                { <a href="@Url.Action("Activate","User", new { id = item.Id })"><img src="~/Content/images/keys/activate.png" /></a>}
                </td>
        </tr>
    }

</table>