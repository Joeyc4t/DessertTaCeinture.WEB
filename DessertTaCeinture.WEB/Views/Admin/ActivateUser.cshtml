@{
    ViewBag.Title = "Activate";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row" style="margin-top:150px;">
    <p class="text-center  animate-box">Êtes-vous certain de vouloir réactiver ce compte ?</p>
    @using (Html.BeginForm("Activate", "User"))
    {
        @Html.AntiForgeryToken()
        <div class="row form-group">
            <div class="col-md-3 col-md-offset-3">
                <input type="submit" class="btn btn-primary btn-block" value="Valider">
            </div>
            <div class="col-md-3">
                <p>@Html.ActionLink("Annuler", "Index", "User", new { @class = "btn btn-primary btn-block" })</p>
            </div>
        </div>
    }
</div>