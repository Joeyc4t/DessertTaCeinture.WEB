@model DessertTaCeinture.WEB.Models.Recipe.RecipeViewModel

@{ 
    int i = 0;
}

@foreach (var item in Model.RecipeSteps)
{
    <div class="form-group stepRow">
        <div class="col-md-10 col-md-offset-1">
            @Html.TextAreaFor(model => model.RecipeSteps[i].Description, new { @class = "form-control", style = "resize:none;" })
        </div>
    </div>

    i++;
}