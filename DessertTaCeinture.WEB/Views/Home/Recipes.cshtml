@model List<DessertTaCeinture.WEB.Models.Recipe.RecipeModel>

    @{
        ViewBag.Title = "Recettes";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <div class="gtco-loader"></div>
    <div id="page">
        <header id="gtco-header" class="gtco-cover gtco-cover-md" role="banner" data-stellar-background-ratio="0.5">
            <div class="overlay"></div>
            <div class="gtco-container">
                <div class="row">
                    <div class="col-md-12 col-md-offset-0 text-left">
                        <div class="row row-mt-15em">
                            <div class="col-md-7 mt-text animate-box" data-animate-effect="fadeInUp" style="margin-top:-25px;">
                                <span class="intro-text-small">trouver des</span>
                                <h1 class="cursive-font">@ViewBag.Title</h1>
                            </div>
                            <div style="margin-top:-50px;">
                                @Html.Partial("_RecipeWithout")

                                @Html.Partial("_RecipeICanDo")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div class="gtco-section">
            <div class="gtco-container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2 text-center gtco-heading">
                        <h2 class="cursive-font primary-color">Dernières douceurs</h2>
                    </div>
                </div>
                @Html.Partial("_LastRecipesList", Model)
            </div>
        </div>
    </div>