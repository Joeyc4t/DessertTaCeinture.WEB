@model DessertTaCeinture.WEB.Models.Home.IndexViewModel

@{ 
    ViewBag.Title = "Dessert ta ceinture";
}
<div class="gtco-loader"></div>
<div id="page">       
    <header id="gtco-header" class="gtco-cover gtco-cover-md" role="banner" style="background-image: url(../../Content/images/backgrounds/Home.jpg)" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="gtco-container">
            <div class="row">
                <div class="col-md-12 col-md-offset-0 text-left"  style="margin-top: -75px;">
                    <div class="row row-mt-15em">
                        <div class="col-md-7 mt-text animate-box" data-animate-effect="fadeInUp">
                            <span class="intro-text-small">So sweet</span>
                            <h1 class="cursive-font">Postez, consultez & commentez !</h1>
                        </div>
                        <div class="col-md-4 col-md-push-1 animate-box" data-animate-effect="fadeInRight">
                            <div class="form-wrap">
                                <div class="tab">
                                    <div class="tab-content">
                                        <div class="tab-content-inner active" data-content="signup">
                                            <h3 class="cursive-font">Recherche rapide</h3>
                                            <form action="#">
                                                <div class="row form-group">
                                                    <div class="col-md-12">
                                                        <label for="date-start">Intitulé</label>
                                                        <input type="text" id="title" class="form-control">
                                                    </div>
                                                </div>
                                                <div class="row form-group">
                                                    <div class="col-md-12">
                                                        <label for="date-start">Ingrédient</label>
                                                        <input type="text" id="mainIngredient" class="form-control">
                                                    </div>
                                                </div>
                                                <div class="row form-group">
                                                    <div class="col-md-12">
                                                        <label for="date-start">Nombre de personnes</label>
                                                        <select name="#" id="numberOfPers" class="form-control">
                                                            <option value=""></option>
                                                            <option value="2">2</option>
                                                            <option value="4">4</option>
                                                            <option value="6">6</option>
                                                            <option value="8">8</option>
                                                            <option value="10">10</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="row form-group">
                                                    <div class="col-md-12">
                                                        <input type="submit" class="btn btn-primary btn-block" value="Rechercher">
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="gtco-section">
        <div class="gtco-container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2 text-center gtco-heading">
                    <h2 class="cursive-font primary-color">Dernières news</h2>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model.News)
                {
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <a href="@Url.Action("Details", "News", new { id = item.Id})" class="fh5co-card-item">
                            <figure>
                                <img src="@item.ImageUrl" alt="Image" class="img-responsive">
                            </figure>
                            <div class="fh5co-text">
                                <h2>@item.Title</h2>
                                <p>@item.ReleaseDate.ToString("dd/MM/yyyy")</p>
                                <p>@item.Summary</p>
                                <p><span class="price cursive-font">Voir</span></p>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>