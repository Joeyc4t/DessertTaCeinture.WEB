@model List<DessertTaCeinture.WEB.Models.Recipe.RecipeModel>

@{
    ViewBag.Title = "Mes recettes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="gtco-loader"></div>
<div id="page">
    <header id="gtco-header" class="gtco-cover gtco-cover-md" role="banner" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="gtco-container">
            <div class="row">
                <div class="col-md-12">
                    <div class="row row-mt-15em">
                        <div class="col-md-7 mt-text animate-box" data-animate-effect="fadeInUp" style="margin-top:-25px;">
                            <h1 class="cursive-font">@ViewBag.Title</h1>
                        </div>
                        <div class="col-md-12 animate-box">
                            <div class="form-wrap">
                                <div class="tab">
                                    <div class="tab-content">
                                        <nav class="gtco-nav animate-box">
                                            <div class="row">
                                                <div class="col-sm-4">
                                                    <a href="@Url.Action("Index", "Home")" style="margin-left: 5px"><img src="~/Content/images/keys/reply.png" alt="Alternate Text" /></a>
                                                </div>
                                                <div class="col-sm-8 text-right menu-1">
                                                    <ul>
                                                        <li style="margin-right: 5px"><span>@Html.ActionLink("Nouvelle recette", "Create")</span></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </nav>
                                        <div class="tab-content-inner active" style="margin-top: 6%;">
                                            @if (Model != null)
                                            {
                                                <table class="table">
                                                    <tr>
                                                        <th class="text-center" width="25%">
                                                            Titre
                                                        </th>
                                                        <th class="text-center" width="25%">
                                                            Date de publication
                                                        </th>
                                                        <th class="text-center" width="10%">
                                                            Publiée
                                                        </th>
                                                        <th class="text-center" width="40%">
                                                            Actions
                                                        </th>
                                                    </tr>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td class="text-center" width="25%">
                                                                @Html.DisplayFor(modelItem => item.Title)
                                                            </td>
                                                            <td class="text-center" width="25%">
                                                                @Html.DisplayFor(modelItem => item.CreationDate)
                                                            </td>
                                                            <td class="text-center" width="10%">
                                                                @if (item.IsPublic)
                                                                {<img src="~/Content/images/keys/isactive.png" /> }
                                                                else
                                                                { <img src="~/Content/images/keys/isnotactive.png" />}
                                                            </td>
                                                            <td class="text-center" width="40%">
                                                                <a href="@Url.Action("Edit","Recipe", new { id = item.Id })"><img src="~/Content/images/keys/edit-yellow.png" /></a>&nbsp;
                                                                <a href="@Url.Action("Details","Recipe", new { id = item.Id })" target="_blank"><img src="~/Content/images/keys/eye-yellow.png" /></a>&nbsp;
                                                                <a href="@Url.Action("Delete","Recipe", new { id = item.Id })"><img src="~/Content/images/keys/delete-yellow.png" /></a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </table>
                                            }
                                            else
                                            {
                                                <h3 class="cursive-font col-md-offset-3">Vous n'avez pas encore de recette ! Créez en une @Html.ActionLink("ici", "Create")</h3>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="gtco-section">
        <div class="gtco-container">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

